{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "camera",
    "type" : "object",
    "description" : "A view into the scene.  The camera describes the projection, but not the camera's position and direction.",
    "properties" : {
        "name" : {
            "type" : "string",
            "description" : "The application-visible globally-unique name of this node."
        },    
        "orthographic" : {
            "$ref" : "orthographic.schema.json"
        },
        "perspective" : {
            "$ref" : "perspective.schema.json"
        },
        "extra" : {
            "type" : "any",
            "description" : "Optional application-specific data."
        }
    },
    "additionalProperties" : false
}
